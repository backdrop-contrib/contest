/**
 * Implementation of hook_uninstall()
 */
function contest_uninstall () {
  
// Delete the variables.

  $rows = db_query("SELECT name FROM {variable} WHERE name LIKE :name", array(':name' => 'contest\_%'))->fetchAll();
  foreach ($rows as $row) {
    variable_del($row->name);
  }
// Remove the export directory.
  
}
/**
 * Create the profile fields used by a contest.
 */
function _contest_install_profile_fields() {
  $field_prefix = 'field_contest';
  $fields = array(
    (object) array(
      'label' => 'Name',
      'name'  => 'name',
      'desc'  => 'Your real name.',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'Business',
      'name'  => 'business',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'Address',
      'name'  => 'address',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'City',
      'name'  => 'city',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'State',
      'name'  => 'state',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'Zip',
      'name'  => 'zip',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'Country',
      'name'  => 'country',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'Phone',
      'name'  => 'phone',
      'desc'  => '',
      'type'  => 'textfield',
    ),
    (object) array(
      'label' => 'Opt In',
      'name'  => 'optin',
      'desc'  => 'I would like to receive promotional efforts from the contest sponsors and promoters.',
      'type'  => 'checkbox',
    ),
  );
  $weight = count($fields) * -10;
  
  foreach ($fields as $index => $field) {
    if (field_info_field("{$field_prefix}_{$field->name}")) {
      continue;
    }
    $prototype = array(
      'field_name' => "{$field_prefix}_{$field->name}", 
      'type'       => 'text', 
    );
    field_create_field($prototype);
    
    $instance = array(
      'field_name'  => "{$field_prefix}_{$field->name}", 
      'entity_type' => 'user', 
      'label'       => $field->label, 
      'bundle'      => 'user', 
      'required'    => FALSE,
      'settings'    => array('user_register_form' => 0),
      'widget'      => array(
        'type'   => $field->type,
        'weight' => $weight + ($index * 10),
      ), 
    );
    field_create_instance($instance);
  }
}
